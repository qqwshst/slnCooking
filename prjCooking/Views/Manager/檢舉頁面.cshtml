
@{
    ViewBag.Title = "檢舉頁面";
}

<!-- 一小塊空白 -->
<section class="service-wrapper py-7">
    <div class="service-tag py-5 bg-white">
    </div>
</section>

<section>

    <div class="container ">
        <div class="row">



            <div class="col-md-6 offset-md-3 text-center bg-light">
                <div class="row">
                    <div class="col-12">
                        <br />
                    </div>
                    <div class="col-md-8 text-left">
                        <h3 class="text-info">管理者 審核檢舉內容</h3>
                    </div>
                    <div class="col-md-4 text-right">
                        @Html.ActionLink("返回聚會列表", "PartyList", null, new { Class = "btn btn-sm btn-outline-secondary" })
                    </div>
                    <div class="col-12 text-left">

                        <hr />
                        <label> 檢舉時間: @ViewBag.f檢舉日期</label><br />
                        <label>檢舉原因: @ViewBag.f檢舉原因</label><br />
                        @Html.ActionLink("查看頁面", "showParty", "Meet", new { id = @ViewBag.f聚會id }, new { Class = "btn btn-sm btn-secondary", @target = "_new" })
                        <br /><hr /><label>檢舉處理:</label><br />
                        <input type="button" class="btn btn-sm btn-info" value="無不當內容" data-toggle="modal" data-target="#modalone1" />
                        <div class="modal text-center" id="modalone1">
                            <div class="modal-md modal-dialog modal-dialog-scrollable">

                                <div class="modal-content">
                                    <div class="modal-header">

                                        <img src="~/Image/heart.svg" class="modal-title">
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    </div>
                                    <div class="modal-body">
                                        <p>聚會頁面若無不當內容，請點選"確定"</p>

                                    </div>
                                    <div class="modal-footer">
                                        <input type="button" value="取消" class="btn btn-sm btn-outline-info" data-dismiss="modal">
                                        @Html.ActionLink("確定", "no下架檢舉的活動", new { id = @ViewBag.f聚會id }, new { Class = "btn btn-sm  btn-outline-info" })

                                    </div>
                                </div>
                            </div>
                        </div>
                        <input type="button" class="btn btn-sm btn-danger" value="下架聚會" data-toggle="modal" data-target="#modalone2" />
                        <div class="modal text-center" id="modalone2">
                            <div class="modal-md modal-dialog modal-dialog-scrollable">

                                <div class="modal-content">
                                    <div class="modal-header">

                                        <img src="~/Image/heart.svg" class="modal-title">
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    </div>
                                    <div class="modal-body">
                                        <p>頁面若含不當內容，請點選"確定"，立即下架聚會</p>

                                    </div>
                                    <div class="modal-footer">
                                        <input type="button" value="取消" class="btn btn-sm btn-outline-info" data-dismiss="modal" />
                                        @Html.ActionLink("確定", "下架檢舉的活動", new { id = @ViewBag.f聚會id }, new { Class = "btn btn-sm  btn-outline-info" })


                                    </div>
                                </div>
                            </div>
                        </div>
                        <br /><br />
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>