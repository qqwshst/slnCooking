@model prjCooking.ViewModel.C管理者會員ViewModel

@{
    ViewBag.Title = "Edit_info";
}



@using (Html.BeginForm("Details", "Manager",
    FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <h2>編輯個人資訊</h2>
    <hr />

    @Html.AntiForgeryToken()

    <aside class="container ">
        <aside class="row">
            <aside class="col-md-6 offset-md-1 text-center bg-light">

                <!-- 開始編輯資訊 -->
                <div class="form-horizontal row">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <aside class=" col-12 text-left">

                        <!--照片-->
                        <div class="form-group">
                            <br />
                            <img src="~/Image/@Model.f會員照片" id="imgpreview" class="rounded-circle " width="170" height="170" />
                            <br />

                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.權限, htmlAttributes: new { @class = "control-label" })

                            @Html.EditorFor(model => model.權限, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                            @Html.ValidationMessageFor(model => model.權限, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.f會員姓名, htmlAttributes: new { @class = "control-label" })

                            @Html.EditorFor(model => model.f會員姓名, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                            @Html.ValidationMessageFor(model => model.f會員姓名, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.性別, htmlAttributes: new { @class = "control-label" })

                            @Html.EditorFor(model => model.性別, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                            @Html.ValidationMessageFor(model => model.性別, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.f會員信箱, htmlAttributes: new { @class = "control-label" })

                            @Html.EditorFor(model => model.f會員信箱, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                            @Html.ValidationMessageFor(model => model.f會員信箱, "", new { @class = "text-danger" })

                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.f會員密碼, htmlAttributes: new { @class = "control-label" })

                            @Html.EditorFor(model => model.f會員密碼, new { htmlAttributes = new { @class = "form-control", @type = "password", disabled = "disabled" } })
                            @Html.ValidationMessageFor(model => model.f會員密碼, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.f自我介紹, htmlAttributes: new { @class = "control-label" })

                            @Html.EditorFor(model => model.f自我介紹, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                            @Html.ValidationMessageFor(model => model.f自我介紹, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.f會員電話, htmlAttributes: new { @class = "control-label" })

                            @Html.EditorFor(model => model.f會員電話, new { htmlAttributes = new { @class = "form-control", style = "width:50%", disabled = "disabled" } })
                            @Html.ValidationMessageFor(model => model.f會員電話, "", new { @class = "text-danger" })

                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.f會員建立日期, htmlAttributes: new { @class = "control-label" })

                            @Html.EditorFor(model => model.f會員建立日期, new { htmlAttributes = new { @class = "form-control", style = "width:50%", disabled = "disabled" } })
                            @Html.ValidationMessageFor(model => model.f會員建立日期, "", new { @class = "text-danger" })

                        </div>
                    </aside>
                    <aside class="col-12 text-right">
                        <div class="form-group">
                            <br />
                            @Html.ActionLink("返回用戶列表", "List", new { id = @Model.f會員Id }, new { Class = "btn btn-outline-info" })

                            
                        </div>
                    </aside>
                </div>
            </aside>
        </aside>
    </aside>


}



<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
