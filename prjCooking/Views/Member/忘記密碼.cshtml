@model prjCooking.Models.t會員
@{
    ViewBag.Title = "忘記密碼";
}
<!-- 一小塊空白 -->
<section class="service-wrapper py-7">
    <div class="service-tag py-5 bg-white">
    </div>
</section>


<form method="post" class="form-horizontal" style="text-align:center;">
    <section>
        <div class="container ">
            <div class="row bg-light">
                <div class="col-12 text-left">
                    <br />
                    <h2 class="text-info">忘記密碼</h2>
                    <hr />
                </div>
                <div class="col-3"></div>
                <div class="col-6 text-left">
                    <br />
                    <span>請輸入完整的信箱帳號:</span><br><br />
                    <input placeholder="請輸入信箱帳號" class="form-control" type="email" name="txtEmail" disabled="@ViewBag.dis" value="@ViewBag.mail" required><br>
                    @if (Model != null)
                    {
                        <input placeholder="XXX@gmail.com" class="form-control" type="hidden" name="txtEmail" value="@Model.f會員信箱"><br>
                    }

                    @if (ViewBag.mail != null)
                    {
                        <span>請至信箱查看驗證碼並輸入</span><br><br />
                        <input placeholder="請輸入驗證碼" class="form-control" type="text" name="check" required /><br>
                        <br>
                        <hr />
                        <span>輸入密碼</span><br><br />
                        <input placeholder="輸入密碼" class="form-control" type="password" name="txtPwd" required /><br>
                        <br>
                        <br>
                        <input placeholder="再次輸入密碼" class="form-control" type="password" name="txtRePwd" required /><br>
                        <br>
                    }


                </div>
                <div class="col-3"></div>
                <div class="col-3"></div>
                <div class="col-6 text-right">
                    <input type="submit" class="btn btn-sm btn-info" value="下一步" />

                </div>
                <div class="col-3"></div>
                <div class="col-12">
                    <br><br /><br /><br /> <br><br />
                </div>

                <!--required 必填欄位-->






            </div>

        </div>
    </section>
</form>