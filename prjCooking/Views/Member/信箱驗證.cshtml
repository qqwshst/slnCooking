@{
    ViewBag.Title = "信箱驗證";
}

<h2>信箱驗證</h2>

<form class="form-horizontal" style="text-align:center;" method="post">
    <div class="form-group">
        <br>
        <!--required 必填欄位-->
        <span>信箱</span><br>
        <input placeholder="XXX@gmail.com" style="width:400px" type="email" name="txtEmail" disabled="@ViewBag.dis" value="@ViewBag.mail">@ViewBag.帳號已存在<br>
        <br>
        @if (ViewBag.mail != null)
        {
            <div id="check">
                <span>驗證碼</span><br>
                <input placeholder="請輸入4字驗證碼" style="width:400px" type="text" name="check" /><br>
                <br>
            </div>
        }

        <div>
            <input type="submit" value="Next" />
        </div>


    </div>
</form>