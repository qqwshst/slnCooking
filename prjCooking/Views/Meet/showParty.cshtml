@model prjCooking.ViewModel.C聚會資訊For頁面ViewModel

@{
    ViewBag.Title = "showParty";
}


<section>
    <div class="container ">
        <div class="row">

            <div class="col-md-7 offset-md-1 text-center bg-light">
                <div class="row">

                    <div class="col-md-12 text-left text-secondary">
                        <br>
                        <!-- 照片 -->

                        <img class="card-img-top" src="img/cook_02.jpg" width="300">

                        <br><br>
                        <!-- 照片結束 -->
                        <!-- 聚會主題 -->
                        <!-- 主辦人id -->
                        <input type="text" id="member_id" style="width:25%">
                        <!-- 主辦人id結束 -->
                        <p><a href="導覽列 - 個人頁面 - 最終.html"><img src="img/img_01.jpg" class="rounded-circle" width="30"></a><a class="text-secondary" href="導覽列 - 個人頁面 - 最終.html"> 陳阿花</a></p>
                        <!-- 煮辦人資訊 -->
                        <p><i class="bi bi-envelope"></i> test@test.com</p>
                        <p>通訊軟體:Line</p>
                        <p>帳號:test</p>
                        <p><i class="bi bi-chat-square-dots"></i> 報名成功的人可以先加我的賴喔</p>
                        <hr>
                        <!-- 個人資訊結束 -->
                        <!-- 聚會id -->
                        <input type="text" id="party_id" style="width:25%">
                        <!-- 聚會id結束 -->
                        <h3 class="text-dark">一起來做早餐吧!</h3>


                        <!-- 聚會內容 -->
                        <p class="text-dark">相約美好的早晨時光，一起線上做簡單又好吃的美式早餐!可以先準備煎食材的用具，當天一起料理吧!</p>
                        <!-- 關鍵字 -->
                        <!-- 點選到首頁搜尋此關鍵字的結果 -->
                        <br>
                        <a href="#">#早餐</a>
                        <a href="#">#蛋</a>
                        <a href="#">#簡單</a>
                        <a href="#">#好吃</a>
                        <a href="#">#美式</a>
                        <a href="#">#breakfast</a>
                        <hr>
                        <!-- 日期 -->
                        <p><i class="bi bi-clock" width="16" height="16"></i> 2021/09/21 08:00-10:00</p>

                        <!-- 視訊軟體 -->
                        <p><i class="bi bi-geo-alt"></i> webex會議軟體</p>
                        <!-- 名額 -->
                        <p><i class="bi bi-people"></i> 5人</p>

                        <!-- 若為主辦人瀏覽自己舉辦的聚會+disabled,btn就會無法點選-->
                        <button class="form-control btn btn-secondary" type="button" disabled>已結束</button>
                        <br><br>
                        <!-- 食材 -->
                        <!-- 1個食材row2,2個食材row3,3個食材row4 -->

                        <table class="col-5 table table-borderless table-sm text-secondary">
                            <tr>
                                <td class="text-dark">建議食材</td>
                            </tr>
                            <tr>
                                <td>雞蛋</td>
                                <td class="text-left">2顆</td>
                            </tr>
                            <tr>
                                <td>番茄</td>
                                <td>2顆</td>
                            </tr>
                            <tr>
                                <td>雞胸肉</td>
                                <td>200g</td>
                            </tr>
                        </table>
                        <hr>
                        <p class="text-dark">成果發表</p>
                        <br><br>

                    </div>

                    <!-- 評價 -->
                    <div class="col-12">
                        <div class="row">
                            <!-- 第一個成果 -->
                            <!-- 點圖可放大/並顯示評論內容 -->
                            <div class="col-md-4 mb-3">
                                <a data-toggle="modal" data-target="#modalone">
                                    <img src="img/cook_03.jpg" class="img-fluid rounded" onclick="showMaxImg1(this)">
                                </a>
                            </div>
                            <!-- 點圖可放大/並顯示評論內容 -->
                            <div class="modal fade bs-example-modal-md  text-center" id="imgModal" tabindex="-1" role="dialog" data-toggle="modal" aria-labelledby="myLargeModalLabel" aria-hidden="true">
                                <div class="modal-dialog modal-md " style="display:inline-block;width:auto;">

                                    <div class="modal-content col-10">
                                        <div id="imgshow"></div>
                                    </div>
                                </div>
                            </div>
                            <!-- 第一個成果結束 -->
                            <!-- 第二個成果 -->
                            <div class="col-md-4 mb-3"><a data-toggle="modal" data-target="#modalone"><img src="img/cook_01.jpg" class="img-fluid rounded" onclick="showMaxImg2(this)"></a></div>
                            <!-- 點圖可放大/並顯示評論內容 -->
                            <div class="modal fade bs-example-modal-md  text-center" id="imgModal" tabindex="-1" role="dialog" data-toggle="modal" aria-labelledby="myLargeModalLabel" aria-hidden="true">
                                <div class="modal-dialog modal-md" style="display:inline-block;width:auto;">

                                    <div class="modal-content col-10">

                                        <div class="modal-body" id="imgshow"></div>
                                    </div>
                                </div>
                            </div>
                            <!-- 第二個成果結束 -->
                            <!-- 第三個成果 -->
                            <div class="col-md-4 mb-3"><a data-toggle="modal" data-target="#modalone"><img src="img/cook_02.jpg" class="img-fluid rounded" onclick="showMaxImg3(this)"></a></div>
                            <!-- 點圖可放大/並顯示評論內容 -->
                            <div class="modal fade bs-example-modal-md  text-center" id="imgModal" tabindex="-1" role="dialog" data-toggle="modal" aria-labelledby="myLargeModalLabel" aria-hidden="true">
                                <div class="modal-dialog modal-md" style="display:inline-block;width:auto;">

                                    <div class="modal-content col-10">
                                        <div id="imgshow"></div>
                                    </div>
                                </div>
                            </div>
                            <!-- 第三個成果結束 -->
                            <!-- 第四個成果 -->
                            <div class="col-md-4 mb-3"><a data-toggle="modal" data-target="#modalone"><img src="img/cook_01.jpg" class="img-fluid rounded" onclick="showMaxImg4(this)"></a></div>
                            <!-- 點圖可放大/並顯示評論內容 -->
                            <div class="modal fade bs-example-modal-md  text-center" id="imgModal" tabindex="-1" role="dialog" data-toggle="modal" aria-labelledby="myLargeModalLabel" aria-hidden="true">
                                <div class="modal-dialog modal-md" style="display:inline-block;width:auto;">

                                    <div class="modal-content col-10">
                                        <div id="imgshow"></div>
                                    </div>
                                </div>
                            </div>
                            <!-- 第四個成果結束 -->
                        </div>
                        <hr>

                    </div>
                    <!-- 編輯/留言 視窗 -->

                    <div class="col-7 text-left">
                        <!-- 參與人id -->
                        <input type="text" id="member_id" style="width:25%">
                        <!-- 參與人id結束 -->
                        <p>請發表您的共煮成果:<br><span class="text-danger">*需上傳圖片才能發布成果<br></span></p>
                        <a><img src="img/img_01.jpg" class="rounded-circle" height="30" width=”30”> 陳阿花</a>

                        <br><br>
                        <!-- 上傳照片 -->
                        <input type="file" name="fileupload" id="fileupload" accept="image/jpeg, image/gif, image/png" onchange="openFile()" multiple>
                        <p class="text-secondary">圖片格式:jpeg/gif/png</p>
                    </div>

                    <div class="col-5 text-center">
                        <!-- 圖片預覽的地方 -->
                        <img src="img/imgadd_01.png" class="img-fluid rounded" id="imgpreview" width="150" height="150">
                        <!-- <img src="img/bg_01.jpg" > -->
                        <!-- <input class="btn btn-outline-danger" type="button" value="編輯"> -->



                    </div>
                    <!-- 留言視窗 結束 -->
                    <!-- 確認btn -->
                    <div class="col-7">
                        <!-- 有上傳圖片才顯示 -->
                        <input type="text" class="form-control" placeholder="新增留言..." style="" value="" maxlength="30">
                    </div>
                    <div class="col-5 text-center">
                        <input class="btn btn-outline-info" type="button" value="確定上傳">
                    </div>
                    <!-- 確認btn 結束 -->


                </div>

                <br><br>
            </div>

        </div>



    </div>

</section>
<p>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    @Html.ActionLink("Back to List", "Index")
</p>
