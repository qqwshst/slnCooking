@model IEnumerable<prjCooking.ViewModel.CFoodViewModel>


@{
    ViewBag.Title = "FoodList";
}


<section class="service-wrapper py-7">
    <div class="service-tag py-5 bg-white">
    </div>
</section>
<div class="container myfont1">
    <!-- 網站內容 -->



    <section class="">

        <div class="container ">
            <div class="row">
                <div class="col-md-6 offset-md-1 text-center bg-light">
                    <br />
                    <div class="row">

                        <aside class="col-6 text-left">
                            <h4 class="text-info ">共煮食材列表</h4>
                            <input type="hidden" value="@ViewBag.f聚會id" name="f聚會id" />
                        </aside>
                        <aside class="col-6 text-right">

                            @Html.ActionLink("新增食材", "queryCreateFood", new { id= @ViewBag.f聚會id }, new { @class = "btn btn-outline-info" })
                        </aside>
                        <aside class="col-12 text-left">
                            <hr /><br />
                        </aside>

                        <aside class="col-12">

                            <table class="table table-condensed table-hover table-responsive">
                                <thead>
                                <th>
                                    編號
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.f食材名稱)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.f數量)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.f單位)
                                </th>

                                <th></th>
                                </thead>

                                @{ int count = 0;
                                    foreach (var item in Model)
                                    {
                                        count++;

                                        <tr>
                                            <td>
                                                @count
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.f食材名稱)

                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.f數量)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.f單位)
                                            </td>

                                            <td>
                                                @Html.ActionLink("✎", "queryEditFood", new { id = item.f建議食材Id }, new { @class = "btn btn-outline-secondary" })
                                                <input type="button" value="✘" class="btn btn-outline-secondary" data-toggle="modal" data-target="#modalone" />
                                                <div class="modal" id="modalone">
                                                    <div class="modal-md modal-dialog modal-dialog-scrollable">

                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <i class="modal-title text-danger bi bi-exclamation-circle"></i>
                                                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <p>確定要刪除嗎?</p>

                                                            </div>
                                                            <div class="modal-footer">
                                                                <input type="button" value="取消" class="btn btn-sm btn-outline-info" data-dismiss="modal">
                                                                @Html.ActionLink("確定", "queryDelete_food", new { id = item.f建議食材Id }, new { @class = "btn btn-sm btn-outline-info" })

                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <!-- 編輯資訊結束 -->



                                            </td>
                                        </tr>
                                    }
                                }
                            </table>
                        </aside>
                        <aside class="col-2"></aside>
                        <aside class="col-12 text-right">
                            <a href="~/Meet/showParty/@ViewBag.f聚會id"><input type="button" class="btn btn-sm btn-outline-secondary" value="完成" /></a>
                            @*@Html.ActionLink("完成", "showParty", "Meet", new { id=@ViewBag.f聚會id }, new { Class = "btn btn-sm btn-outline-secondary" })*@
                            <br /><br />
                        </aside>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <br /><br />

</div>
