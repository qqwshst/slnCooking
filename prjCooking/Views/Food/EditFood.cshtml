@model prjCooking.ViewModel.CFoodViewModel

@{
    ViewBag.Title = "CreateFood";
}

<h2 class="text-info">舉辦共煮</h2>
<hr>
<br>
@using (Html.BeginForm("EditFood", "Food",
    FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="container myfont1">
            <!-- 網站內容 -->


            <section>
                <div class="container ">
                    <div class="row">

                        <div class="col-md-6 offset-md-1 text-center bg-light">

                            <div class="row">
                                <aside class="col-12 text-left">
                                    <br>
                                    <h4 class="text-info">編輯共煮食材:</h4>
                                </aside>


                                <aside class="col-12 text-left">

                                    <hr>
                                    <br>

                                    <input type="hidden" value="@Model.f聚會Id" name="f聚會Id" />
                                    <input type="hidden" value="@Model.f建議食材Id" name="f建議食材Id" />
                                </aside>

                                <aside class="form-group col-6 text-left">

                                    @Html.LabelFor(model => model.f食材名稱, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.f食材名稱, new { htmlAttributes = new { @class = "form-control", name = "f食材名稱" } })
                                    @Html.ValidationMessageFor(model => model.f食材名稱, "", new { @class = "text-danger" })


                                </aside>
                                <aside class="form-group col-3 text-left">
                                    @Html.LabelFor(model => model.f數量, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.f數量, new { htmlAttributes = new { @class = "form-control", name = "f數量", @type = "number" } })
                                    @Html.ValidationMessageFor(model => model.f數量, "", new { @class = "text-danger" })


                                </aside>
                                <aside class="form-group col-3 text-left">
                                    @Html.LabelFor(model => model.f單位, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.f單位, new { htmlAttributes = new { @class = "form-control", name = "f食材名稱" } })
                                    @Html.ValidationMessageFor(model => model.f單位, "", new { @class = "text-danger" })

                                </aside>
                                <aside class="col-12 text-right">


                                    <input class="btn btn-outline-info" type="button" value="儲存" data-toggle="modal" data-target="#modalone">
                                    <br><br>
                                    <div class="modal text-center" id="modalone">
                                        <div class="modal-md modal-dialog modal-dialog-scrollable">

                                            <div class="modal-content">
                                                <div class="modal-header">

                                                    <i class="modal-title text-danger bi bi-exclamation-circle"></i>
                                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                </div>
                                                <div class="modal-body">
                                                    <p>確定要修改嗎?</p>

                                                </div>
                                                <div class="modal-footer">

                                                    @Html.ActionLink("取消", "FoodList", null, new { Class = "btn btn-sm btn-outline-info" })
                                                    <input type="submit" value="確定" class="btn btn-sm btn-outline-info">
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </aside>
                                <aside class="col-12 text-right">
                                </aside>

                                <aside class="col-12 text-right">
                                    <br><hr>


                                    <br><br>
                                </aside>

                            </div>

                        </div>

                    </div>

                </div>
            </section>
            <br><br>

        </div>
    </div>


}
